{
    "name": "d-lola/restaurante",
    "description": "Sistema de gesti√≥n de restaurante MVC",
    "type": "project",
    "require": {
        "php": "^8.2",
        "vlucas/phpdotenv": "^5.6",
        "tecnickcom/tcpdf": "^6.7",
        "phpmailer/phpmailer": "^6.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "classmap": [
            "config",
            "controllers",
            "models",
            "routes"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests"
        ]
    },
    "scripts": {
        "test": "phpunit --colors=always"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable"
}